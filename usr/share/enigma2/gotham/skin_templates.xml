	<!-- ####### MENU SCREEN TEMPLATE    ####### -->
	<screen name="ScreenMenuTemplate">
		<panel name="headmonotemplate" />
		<panel name="pigtemplate" />
		<panel name="scrollbarmaxtemplate" />
		<!-- menu list --> 
		<widget source="menu" render="Listbox" position="70,110" zPosition="2" size="725,480" backgroundPixmap="gotham/icons/butselection.png" selectionPixmap="gotham/icons/ls700x38.png" transparent="1">
			<convert type="TemplatedMultiContent">
			{
				"template": [
					MultiContentEntryText(pos = (51, 2), size = (600, 40), flags = RT_HALIGN_LEFT, text = 0)
				],
				"fonts": [gFont("Regular", 28)],
				"itemHeight": 40
			}
			</convert>
		</widget>
	</screen>
	
